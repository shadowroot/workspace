<?php
function not_inj($text){
	$text = htmlspecialchars($text);
	
	$str1 = explode('<?', $text);
	if(sizeof($str1)>1){
		$str2 = explode("?>",$str1[1]);
		if(sizeof($str2)>1){
			$text = $str1[0].$str2[1];
		}
		else{
			$text = $str1[0].$str2[0];
		}
	}

	return $text;
}
if(isset($_GET['err']) && $_GET['err'] != ""){
	echo '<div class="error">'.$_GET['err'].'</div>';
}

?>