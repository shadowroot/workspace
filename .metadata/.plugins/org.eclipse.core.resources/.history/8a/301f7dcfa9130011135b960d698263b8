import os,sys,re

class handler:
    desc=None
    dir = "D:/+PDF+/RFC/"
    index = "rfc-index.txt"
    def main(self,name):
        self.desc = os.open(name, 'r')
        
        
        
    def search(self,name):
        os.chdir(self.dir)
        results = os.listdir()
        for result in results:
            file = re.match(".*?"+name+".*?", result, "i")
            if file != None:
                self.main(file)


