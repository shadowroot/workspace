@author: Jonny

"""

import os,sys,re

class handler:
    desc=None
    dir = "D:/+PDF+/RFC/"
    index = "rfc-index.txt"
    ids = list()
    def main(self,name):
        self.desc = os.open(name, 'r')
        
    def find(self,name):
        where = os.open(self.dir+self.index, 'r')
        data = where.read()
        splited = data.split("\r\n\r\n")
        for split in splited:
            result = re.match(".*?"+name+"?.*", split, "gi")  
            if result != None:
                dat = result.split("\x20")  
                self.ids.add(dat.index(0))
        self.search()
        
    def search(self):
        os.chdir(self.dir)
        results = os.listdir()
        for result in results:
            file = re.match(".*?"+name+"?.*", result, "gi")
            if file != None:
                self.main(file)


