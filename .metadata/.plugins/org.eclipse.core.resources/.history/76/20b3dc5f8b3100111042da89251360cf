package auta;



import java.awt.*;
import java.awt.event.ActionListener;
import java.util.Date;


import javax.swing.*;


public class run extends JFrame implements ActionListener {
	private static Dimension d = new Dimension(500, 300);
	private static JFrame frame;
	private static Graphics first;
	private static Timer timer = new Timer(1000, refresh_window());
	
	public static void main(String[] args){
		JFrame.setDefaultLookAndFeelDecorated(true);
		frame = new JFrame("FrameDemo");
		window();
		timer.start();
		
		
		/*
		SwingCapture a = new SwingCapture();
		a.main(args);
		 * 
		 */
	}
	
	public static void window(){
		//1. Create the frame.
		

		//2. Optional: What happens when the frame closes?
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		frame.setSize(d);
		
		frame.setVisible(true);
		first = frame.getGraphics();
			
	}
	
	private static refresh_window(){
		draw_time();
		return null;
	}
	
	private static void draw_time(){
		Graphics g = first;
		Date now = new Date();
		g.drawString(now.toString(), 100, 100);
		 frame.update(g);
	}
	

	
}
