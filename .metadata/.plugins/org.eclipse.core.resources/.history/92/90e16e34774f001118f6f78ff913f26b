/**
 * Key binding
 * 1. snake q,w
 * 2. snake f,g
 * 3. snake b,n
 * 
 * 
 * 
 * 
 * 4.snake .,-
 * 
 * 
 */
function game(){
	this.canvas=null;
	this.layer=null,
	this.snakes=array();//positions
    this.snakes_direct=array();//snakes directions
    this.size=1;
    this.points=array();//pointed points
    this.speed=5;
    this.num_players=4;
    this.sock = new XMLHttpRequest();
	this.init = function(){
		this.canvas = document.getElementById("gameplace");
		this.layer = this.canvas.getContext("2d");
		this.layer.beginPath();
		setInterval(this.play_game(),100);
		document.prototype.onkeydown = function(e){
			switch(e.keyCode){
			case 113/*q*/:
				
				break;
			case 119/*w*/:
				
				break;
			case 102/*f*/:
				
				break;
			case 103/*g*/:
				
				break;
			default:
				break;
			}

		};
		this.sock.prototype.onreadystatechange = function(e) {
			
		};
	};
	this.draw_move=function(x,y){
		x++;
		y++;
		
		this.layer.LineTo(x,y); //LineTo(x,y)
		
		
	};
	this.getter=function(name,v){
		this.name=v;
	};
	this.setter=function(name,val){
		this.name = val;
	};
	this.draw_game=function(){
		
	};
	
	
		
}
