<?php
function not_inj($text){
	$text = htmlspecialchars($text);
	$text = str_replace('/', '&#47;', $text);
	$str1 = explode("<?", $text);
	if(sizeof($str1)>1){
		$str2 = explode("?>",$str1[1]);
		if(sizeof($str2)>1){
			$text = $str1[0].$str2[1];
		}
		else{
			$text = $str1[0].$str2[0];
		}
	}

	return $text;
}

?>