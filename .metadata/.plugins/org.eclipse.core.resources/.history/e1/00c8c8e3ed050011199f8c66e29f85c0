<?php
// port FW
class FW{
	private $port;
	private $socket;
	private $cli;
	private $buff;
	private $i;
	private $max_client=1000;
	
	function __construct($port){
		$this->port = $port;
		$this->socket = socket_create(AF_INET, SOCK_STREAM, SOL_TCP);
		socket_bind($this->socket, "0.0.0.0", $this->port);
		socket_listen($this->socket);
		while(1){
			if($this->cli[$this->i] = socket_accept($this->socket)){
				$this->i++;
			}
			$readable = socket_select($this->cli, null, null, null);
			if(in_array($readable, $this->cli)){
				socket_recvfrom($readable, $data, 4, 0, $ip, $port);
				$this->handle($data,$readable);
				while(!socket_close($readable)){
					socket_recvfrom($readable, $data, 4, 0, $ip, $port);
					$this->buff .= $data;
				}
				$this->process($this->buff,$socket);
			}
			
		}
	}
	
	
	function process($data,$socket){
		
	}
	
	
	function handle($code){
		switch($code){
			case "EXIT":
				socket_close($socket);
			
			
		}
		
		
	}
	
	
	
}



?>